<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE window SYSTEM "chrome://blogmark/locale/blogmark.dtd">

<window class="dialog"
	title="Blogmark - &About;"
	orient="vertical"
	autostretch="always"
	onload="sizeToContent()"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

<!-- Original template by Jed Brown -->

<groupbox align="center" orient="horizontal" style="background: white;">
<vbox>
  <box>
  <text value="Blogmark" style="font-weight: bold; font-size: larger;"/>
  <text value=" ver. @VERSION@" style="font-weight: bold; font-size: larger; color: #aaaaaa;"/>
  </box>
  <separator class="thin"/>
  <text value="&credits.writtenBy;" style="font-weight: bold;"/>
  <text value="R&#233;gis D&#233;camps" class="url"
        onclick="window.open('http://www.decamps.info/'); window.close();"/>
  <text value="&credits.graphicsBy;" style="font-weight: bold;"/>
  <text value="S&#233;bastien Brothier" class="url"
        onclick="window.open('http://www.upian.com/'); window.close();"/>
  <separator class="thin"/>
</vbox>
<spring flex="1"/>
<image src="chrome://blogmark/skin/big.png"/>
</groupbox>
  <hbox>
  <spacer flex="true"/>
   <button label="&Close;" oncommand="window.close();"/>
  </hbox>
</window>
